# PENSTATION Configuration
# Copy to .env and adjust as needed

# Network â€” "auto" detects subnet automatically
SUBNET=auto
SCAN_INTERVAL_HOURS=1
TEMPLATE_UPDATE_HOUR=3

# WiFi (set by install.sh)
WIFI_SSID=
WIFI_PASSWORD=

# Scanner tuning
NMAP_TIMING=T3
NUCLEI_RATE_LIMIT=50
NUCLEI_TIMEOUT=10
SEVERITY_FILTER=low,medium,high,critical

# Paths
NUCLEI_BIN=/usr/local/bin/nuclei

# Alerts
ALERT_ON_CRITICAL=true
ALERT_ON_NEW_HOST=true
